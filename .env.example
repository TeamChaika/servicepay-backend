# App Configuration
APP_NAME=HelpChaika
APP_ENV=production
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/helpchaika

# Redis
REDIS_URL=redis://redis:6379/0

# CORS (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://yourdomain.com"]

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_SECRET_KEY=your-access-token-secret-key-here
JWT_REFRESH_SECRET_KEY=your-refresh-token-secret-key-here

# URLs
API_BASE_URL=http://localhost:8000
ADMIN_PORTAL_URL=http://localhost:3000
GUEST_PORTAL_URL=http://localhost:3001

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
